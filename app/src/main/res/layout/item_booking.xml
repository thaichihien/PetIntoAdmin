<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:layout_marginVertical="6dp"
    android:background="@color/white"
    android:id="@+id/layoutBooking"
    >

    <TextView
        android:id="@+id/tvBookingType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        android:textColor="@color/main_dark"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pet_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pet Information: "
        app:layout_constraintStart_toStartOf="@+id/customer_info_title"
        app:layout_constraintTop_toBottomOf="@+id/customer_info_title" />

    <TextView
        android:id="@+id/tvPetInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pet_info_title"
        app:layout_constraintStart_toEndOf="@+id/pet_info_title"
        app:layout_constraintTop_toTopOf="@+id/pet_info_title" />

    <TextView
        android:id="@+id/pet_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Genre: "
        app:layout_constraintStart_toStartOf="@+id/pet_info_title"
        app:layout_constraintTop_toBottomOf="@+id/pet_info_title" />

    <TextView
        android:id="@+id/tvPetGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pet_type_title"
        app:layout_constraintStart_toEndOf="@+id/pet_type_title"
        app:layout_constraintTop_toTopOf="@+id/pet_type_title" />

    <TextView
        android:id="@+id/booking_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Date: "
        app:layout_constraintStart_toStartOf="@+id/booking_service_title"
        app:layout_constraintTop_toBottomOf="@+id/booking_service_title" />

    <TextView
        android:id="@+id/tvBookingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/booking_date_title"
        app:layout_constraintStart_toEndOf="@+id/booking_date_title"
        app:layout_constraintTop_toTopOf="@+id/booking_date_title" />

    <TextView
        android:id="@+id/booking_service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Type :"
        app:layout_constraintStart_toStartOf="@+id/tvBookingType"
        app:layout_constraintTop_toBottomOf="@+id/tvBookingType" />

    <TextView
        android:id="@+id/tvBookingService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/booking_service_title"
        app:layout_constraintStart_toEndOf="@+id/booking_service_title"
        app:layout_constraintTop_toTopOf="@+id/booking_service_title" />

    <TextView
        android:id="@+id/customer_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Customer Information: "
        app:layout_constraintStart_toStartOf="@+id/booking_date_title"
        app:layout_constraintTop_toBottomOf="@+id/booking_date_title" />

    <TextView
        android:id="@+id/tvCustomerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/customer_info_title"
        app:layout_constraintStart_toEndOf="@+id/customer_info_title"
        app:layout_constraintTop_toTopOf="@+id/customer_info_title" />

    <TextView
        android:id="@+id/booking_variety_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Status: "
        app:layout_constraintBottom_toBottomOf="@+id/pet_type_title"
        app:layout_constraintStart_toEndOf="@+id/tvPetGenre"
        app:layout_constraintTop_toTopOf="@+id/pet_type_title" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/booking_variety_title"
        app:layout_constraintStart_toEndOf="@+id/booking_variety_title"
        app:layout_constraintTop_toTopOf="@+id/booking_variety_title" />


</androidx.constraintlayout.widget.ConstraintLayout>