<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.BookingDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:paddingHorizontal="9dp"
        android:paddingTop="40dp"
        android:paddingBottom="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBackDetail"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Details"
            android:textColor="@color/main_dark"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailTitleBar"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/statusSpinnerBtn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignTop="@+id/statusBookingSpinner"
                        android:layout_alignEnd="@+id/statusBookingSpinner"
                        android:layout_alignBottom="@+id/statusBookingSpinner"
                        android:layout_marginStart="164dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="50dp"
                        android:padding="5dp"
                        android:src="@drawable/dropdown_icon" />

                    <Spinner
                        android:id="@+id/statusBookingSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="46dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="46dp"
                        android:layout_marginBottom="46dp"
                        android:background="@color/white"
                        android:elevation="5dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/pet_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Pet Name"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/owner_phone_tv" />

                <TextView
                    android:id="@+id/gender_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Pet Gender"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pet_name_tv" />

                <TextView
                    android:id="@+id/owner_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Owner Name"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/booking_type_tv" />

                <TextView
                    android:id="@+id/owner_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Phone Number"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/owner_name_tv" />


                <TextView
                    android:id="@+id/pet_weight_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Pet Weight"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gender_tv" />


                <EditText
                    android:id="@+id/idEdt"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="123456"
                    app:layout_constraintBottom_toBottomOf="@+id/name_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/name_tv"
                    app:layout_constraintTop_toTopOf="@+id/name_tv" />

                <EditText
                    android:id="@+id/etBookingCheckIn"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="10/04/2023"
                    app:layout_constraintBottom_toBottomOf="@+id/booking_check_in_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/name_tv"
                    app:layout_constraintTop_toTopOf="@+id/booking_check_in_tv" />

                <EditText
                    android:id="@+id/etBookingCheckOut"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="10/04/2023"
                    app:layout_constraintBottom_toBottomOf="@+id/tvBookingCheckOut"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/name_tv"
                    app:layout_constraintTop_toTopOf="@+id/tvBookingCheckOut"/>

                <ImageView
                    android:id="@+id/typeSpinnerBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintStart_toEndOf="@+id/typeBookingSpinner"
                    app:layout_constraintTop_toBottomOf="@id/etBookingCheckOut"
                    android:layout_marginStart="-104dp"
                    android:layout_marginTop="4dp"
                    android:elevation="50dp"
                    android:padding="5dp"
                    android:src="@drawable/dropdown_icon" />

                <Spinner
                    android:id="@+id/typeBookingSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="175dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintStart_toEndOf="@+id/booking_services_tv"
                    app:layout_constraintTop_toBottomOf="@+id/etBookingCheckOut"
                    android:background="@color/white"
                    android:elevation="5dp"/>

                <ImageView
                    android:id="@+id/serviceSpinnerBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintStart_toEndOf="@+id/serviceBookingSpinner"
                    app:layout_constraintTop_toBottomOf="@id/typeBookingSpinner"
                    android:layout_marginStart="-120dp"
                    android:layout_marginTop="16dp"
                    android:elevation="50dp"
                    android:padding="5dp"
                    android:src="@drawable/dropdown_icon" />

                <Spinner
                    android:id="@+id/serviceBookingSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="175dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toEndOf="@+id/booking_type_tv"
                    app:layout_constraintTop_toBottomOf="@+id/typeBookingSpinner"
                    android:background="@color/white"
                    android:elevation="5dp"/>

<!--                <EditText-->
<!--                    android:id="@+id/etBookingType"-->
<!--                    android:layout_width="230dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="50dp"-->
<!--                    android:ems="10"-->
<!--                    android:inputType="textPersonName"-->
<!--                    android:text="Hair cut"-->
<!--                    app:layout_constraintBottom_toBottomOf="@+id/booking_services_tv"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toEndOf="@+id/name_tv"-->
<!--                    app:layout_constraintTop_toTopOf="@+id/booking_services_tv" />-->

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Booking ID"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

                <TextView
                    android:id="@+id/booking_check_in_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Check in"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_tv" />

                <TextView
                    android:id="@+id/tvBookingCheckOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Check out"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/booking_check_in_tv" />

                <TextView
                    android:id="@+id/booking_services_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Type"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvBookingCheckOut" />

                <TextView
                    android:id="@+id/booking_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Service"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/booking_services_tv" />

                <EditText
                    android:id="@+id/etPetName"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Milo"
                    app:layout_constraintBottom_toBottomOf="@+id/pet_name_tv"
                    app:layout_constraintStart_toStartOf="@+id/idEdt"
                    app:layout_constraintTop_toTopOf="@+id/pet_name_tv" />

                <EditText
                    android:id="@+id/etPetGender"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Male"
                    app:layout_constraintBottom_toBottomOf="@+id/gender_tv"
                    app:layout_constraintStart_toStartOf="@+id/etPetName"
                    app:layout_constraintTop_toTopOf="@+id/gender_tv" />

                <EditText
                    android:id="@+id/etOwnerName"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Thái Chí Hiện"
                    app:layout_constraintBottom_toBottomOf="@+id/owner_name_tv"
                    app:layout_constraintStart_toStartOf="@+id/etPetGender"
                    app:layout_constraintTop_toTopOf="@+id/owner_name_tv" />

                <EditText
                    android:id="@+id/etOwnerPhone"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0909123456"
                    app:layout_constraintBottom_toBottomOf="@+id/owner_phone_tv"
                    app:layout_constraintStart_toStartOf="@+id/etOwnerName"
                    app:layout_constraintTop_toTopOf="@+id/owner_phone_tv" />

                <EditText
                    android:id="@+id/etPetWeight"
                    android:layout_width="230dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:text="6.5 kg"
                    app:layout_constraintBottom_toBottomOf="@+id/pet_weight_tv"
                    app:layout_constraintStart_toStartOf="@+id/etPetGender"
                    app:layout_constraintTop_toTopOf="@+id/pet_weight_tv" />



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="30dp"
                    android:background="@drawable/primary_button_background"
                    android:text="UPDATE"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etPetWeight" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDelete"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/third_button_background"
                    android:text="DELETE"
                    android:textColor="@color/main_dark"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.509"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnUpdate" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>