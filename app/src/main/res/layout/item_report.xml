<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:id="@+id/layoutReport"
    android:layout_marginVertical="6dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From customer : "
            android:textColor="@color/main_dark"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hien"
            android:textColor="@color/main_dark"
            android:textSize="18sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email : "
            android:textColor="@color/main_dark"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hien"
            android:textColor="@color/black"

            />

    </LinearLayout>

    <TextView
        android:background="@color/white"
        android:padding="6dp"
        android:id="@+id/tvComment"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sdhsaj sdsdsdsdsdsa sdsdsadsad sdsdsadsasadsa sadsdsa asdsadasdsadsa sdasdsadsad sadsadsadsa sadsakhdskjahdksajhdkjsahdkjsahdjksakdhsakjhdjksahkdhsakjhdkjsahdkjsahdkjsadjhgsagdsahgdjas"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:textColor="@color/main_dark"
                />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/15/2023"
                android:textColor="@color/black"
                />

        </LinearLayout>



    </RelativeLayout>



</LinearLayout>